
<section class="body">
<div class="container pb-5">
<div class="row">
<div class="col-lg-3 col-md-2"></div>
<div class="col-lg-6 col-md-8 login-box">
<div class="col-lg-12 login-key">
                    <i class="fa-solid fa-arrow-right-to-bracket"></i>
                </div>
                <div class="col-lg-12 login-title">
                    LOGIN
                </div>
                <div class="col-lg-12 login-form">
                <div class="col-lg-12 login-form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email ,'E-MAIL', class: 'form-control-label'%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

 <div class="form-group">
    <%= f.label :password,'PASSWORD', class: 'form-control-label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,'REMEMBER ME', class: 'form-control-label' %>
    </div>
  <% end %>
<div class="col-lg-13 loginbttm">
<div class="col-lg-6 login-btm login-text">
                                    <!-- Error Message -->
                                </div>
<div class="col-lg-6 login-btm login-button">
    <%= f.submit "Log in", class:"btn btn-outline-primary", data: {turbo: false} %>
  </div>
  </div>
<% end %>
</div>
</div>
 <div class="col-lg-3 col-md-2"></div>
</div>
</div>
</div>

</section>
